rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * PARIPOSHAN SECURITY RULES - PRODUCTION MODE
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        request.auth.token.email == 'admin@pariposhan.com'
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    function isUnchanged(fieldName) {
      return request.resource.data.get(fieldName, null) == resource.data.get(fieldName, null);
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow list: if isAdmin();
      allow create, update: if isOwner(userId) || isAdmin();
    }

    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());

      match /likes/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
      }
    }

    match /articles/{articleId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    match /products/{productId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isAdmin() || (isSignedIn() && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isVerified', 'adminNotes', 'dateAdded', 'submittedBy']));
      allow delete: if isAdmin();

      match /product_reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isAdmin() || (isExistingOwner(resource.data.userId) && isUnchanged('userId'));
        allow delete: if isAdmin() || isExistingOwner(resource.data.userId);
      }
    }

    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    match /quiz_scores/{scoreId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
    }

    match /product_categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /roles_admin/{uid} {
      allow get: if isOwner(uid);
      allow create, update: if isSignedIn() && request.auth.token.email == 'admin@pariposhan.com';
    }

    match /{path=**}/reports/{reportId} {
      allow list: if isAdmin();
    }
  }
}